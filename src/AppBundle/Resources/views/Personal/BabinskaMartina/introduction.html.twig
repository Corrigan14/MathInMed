                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row margin-top-20">
                        {# EDUCATION #}
                        <div class="col-md-4 animate fadeInUp" data-wow-delay="0.4s">
                            <div class="clearfix icon-box ib-style-2 i-large i-top padding-bottom-31 border-top border-light padding-top-20">
                                <div class="ib-icon">
                                    <i class="fa fa-graduation-cap"></i>
                                </div>
                                <div class="ib-info cursor-hand" onclick="togglePersonalInfo('Education')">
                                    <h4 class="h6">{{ 'personal.martina.part4.headlie'|trans }}</h4>
                                    <p>{{ 'personal.martina.part4.headlie.text'|trans }}</p>
                                </div>
                            </div>
                        </div>

                        {# WORK EXPERIENCE #}
                        <div class="col-md-4 animate fadeInUp" data-wow-delay="0.6s">
                            <div class="clearfix icon-box ib-style-2 i-large i-top padding-bottom-31 border-top border-light padding-top-20">
                                <div class="ib-icon">
                                    <i class="fa fa-archive"></i>
                                </div>
                                <div class="ib-info cursor-hand" onclick="togglePersonalInfo('Work')">
