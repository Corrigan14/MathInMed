                    <div class="heading-block text-center animate fadeInUp" data-wow-delay="0.4s">
                        {#NEXT CHAPTER: BACK TO THE CONTENT MAP#}
                        <a
                                href="{{ path('app_textbook_logarithms_inequalities_introduction') }}#LogarithmicInequalitiesContentMap"
                                class="btn btn-med btn-color"
                        >
                            {{ 'basic_words.back-to-contentMap'|trans }}
                        </a>

                        {#NEXT CHAPTER: problem 2#}
                        <a
                                href="#"
                                class="btn btn-med btn-color"
                        >
                            {{ 'basic_words.next-problem'|trans }}: {{ 'basic_words.problem'|trans }} II
