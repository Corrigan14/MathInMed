                <div class="container both-sides-text-alignment margin-bottom-20">

                    {# WELCOME + WHAT SHOULD I DO? #}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="list-heading uppercase-transform">
                                <h6>
                                    {{ 'basic_words.welcome'|trans }}!
                                </h6>
                            </div>
                        </div>
                    </div>
                    {# STEPS TO SOLVE ANY PROBLEM #}
                    {% include '@App/Textbook/Logarithms/LogarithmicInequalities/Problems/Includes/solutionSteps.html.twig' %}


                    {# UNDERSTAND THE PROBLEM #}
                    <div class="row" id="understandTheProblem">
                        <div class="col-md-12">
                            <div class="list-heading uppercase-transform">
                                <h6>
                                    <span>I. </span>
                                    {{ 'textBook.basic_words.solutionSteps.step1'|trans }}
                                </h6>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <section>
                                <ul class="list-style list-w-bullets check text-uppercase">
                                    <li>
                                        {{ 'textBook.logarithms.logarithmicInequalities.problem1-gorup1-text1-1'|trans }}
