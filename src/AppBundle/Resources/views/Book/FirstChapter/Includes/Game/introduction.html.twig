    <div class="container">
        <div class="testi">
            <div class="text-in">
                <p class="font-crimson margin-0">
                    {{ 'book.game.joke.beginning.text-1'|trans }}
                </p>
                <p class="font-crimson margin-0">
                    {{ 'book.game.joke.beginning.text-2-1'|trans }}:
                    "{{ 'book.game.joke.beginning.text-2-2'|trans }}"
                </p>
                <p class="font-crimson margin-0">
                    {{ 'book.game.joke.beginning.text-3-1'|trans }}:
                    "{{ 'book.game.joke.beginning.text-3-2'|trans }}"
                </p>
                <p class="font-crimson margin-0">
                    {{ 'book.game.joke.beginning.text-4-1'|trans }}:
