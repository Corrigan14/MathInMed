<div id="task4-2" class="container hide-element padding-top-30">
    {# HEADING #}
    <div class="row">
        <div class="col-md-12">
            <div class="problem">
                <h6>
                    {{ 'book.game.alternative'|trans }} II
                </h6>
            </div>
        </div>
    </div>

    {# TASK #}
    <div class="row">
        <div class="col-md-5">
            <p>
                {{ 'book.game.part1.task4-1.text1-1'|trans }}
                <span>
                    <b>
                        {{ 'book.game.part1.task4-1.text1-2'|trans }}
                        <i>k</i>
                    </b>
                </span>
                {{ 'book.game.part1.task4-1.text1-3'|trans }}
                <span>
                    <b>
                        {{ 'book.game.part1.task4-1.text1-4'|trans }}
                        <i>m</i>
                    </b>
                </span>.
            </p>

            {# OPTIONS #}
            <div class="padding-top-20 bold-p-tags">
                <p>
                    {{ 'book.game.part1.task4-1.text4'|trans }}?
                </p>
                <div class="row smaller-p-tags-line padding-top-10">
                    <div class="col-md-1">
                        <p>A.</p>
                    </div>
                    <div class="col-md-11">
                        <p>
                            {{ 'book.game.part1.task4-1.text5-1'|trans }}
                            <i>k</i>
                            {{ 'book.game.part1.task4-1.text5-2'|trans }}
                            <i>&lang;-1,1&rang;</i>.
                        </p>
                    </div>
                </div>
                <div class="row smaller-p-tags-line">
                    <div class="col-md-1">
                        <p>B.</p>
                    </div>
                    <div class="col-md-11">
                        <p>
                            {{ 'book.game.part1.task4-1.text7-1'|trans }}
                            <i>m &isin; &lang;&pi;,3&pi;/2&rang;</i>,
                            {{ 'book.game.part1.task4-1.text7-2'|trans }}
                            <i>k</i>
                            {{ 'book.game.part1.task4-1.text7-3'|trans }}.
                        </p>
                    </div>
                </div>
                <div class="row smaller-p-tags-line">
                    <div class="col-md-1">
                        <p>C.</p>
                    </div>
                    <div class="col-md-11">
                        <p>
                            {{ 'book.game.part1.task4-1.text6-1'|trans }}
                            <i>m = &pi;/2</i>,
                            {{ 'book.game.part1.task4-1.text6-2'|trans }}
                            <i>k</i>
                            {{ 'book.game.part1.task4-1.text6-3'|trans }}
                            <i>k = 0</i>.
                        </p>
                    </div>
                </div>
                <div class="row smaller-p-tags-line">
                    <div class="col-md-1">
                        <p>D.</p>
                    </div>
                    <div class="col-md-11">
                        <p>
                            {{ 'book.game.part1.task4-1.text8-1'|trans }}
                            <i>k</i>
                            {{ 'book.game.part1.task4-1.text8-2'|trans }}.
                            {{ 'book.game.part1.task4-1.text8-3'|trans }}
                            <i>3&pi;/2</i>
                            ({{ 'book.game.part1.task4-1.text8-4'|trans }}
                            <i>3&pi;/2</i>).
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-7">
            {% image '@AppBundle/Resources/public/images/book/game/part1/task4-2.png' %}
            <img src="{{ asset_url }}" alt="Spirometry curve" class="img-responsive">
            {% endimage %}
        </div>
    </div>

    {# ANSWERS TABLE #}
    <div id="answerTable1" class="row padding-top-50">
        <div class="col-md-12">
            <h6 class="problem">{{ 'book.answer.table'|trans }}</h6>
            <table class="table table-bordered margin-bottom-15 margin-top-15 vertical-middle">
                <thead>
                <tr class="active uppercase-transform">
                    <th>{{ 'book.answer'|trans }}</th>
                    <th class="min-width-200 text-center">A, D</th>
                    <th class="min-width-200 text-center">B, C, D</th>
                    <th class="min-width-200 text-center">A, B, C, D</th>
                    <th class="min-width-200 text-center">C, D</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td class="active uppercase-transform"><b>{{ 'book.game.cipher'|trans }}</b></td>
                    <td class="text-center">...</td>
                    <td class="text-center">...</td>
                    <td class="text-center">...</td>
                    <td class="text-center">...</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>