<div class="row">
    <div class="col-md-12">
        <h6 class="uppercase-transform">{{ 'book.diseases.header'|trans }}</h6>
        <p>{{ 'book.diseases.introduction'|trans }}</p>
    </div>
</div>

<div id="restrictive-diseases" class="row padding-top-10 padding-bottom-20">
    <div class="col-md-12">
        <h6>I. {{ 'book.diseases.header-11'|trans }}</h6>
        <div class="padding-left-20">
            <p><i>({{ 'book.diseases.part-11-text-1'|trans }})</i></p>
            <h7><b>{{ 'book.diseases.part-11-header-1'|trans }}</b></h7>
            <p>{{ 'book.diseases.part-11-text-2'|trans }}</p>
            <h7><b>{{ 'book.diseases.part-11-header-2'|trans }}</b></h7>
            {% include 'AppBundle:Book:FirstChapter/Includes/table-restrictive-diseases.html.twig' %}

            <p class="margin-bottom-0"><i>{{ 'book.note'|trans }}</i></p>
            <p class="margin-bottom-20"><i>{{ 'book.diseases.note-1'|trans }}</i></p>

            <h7><b>{{ 'book.diseases.part-11-header-3'|trans }}</b></h7>
            <p class="margin-bottom-0">{{ 'book.diseases.part-11-text-3'|trans }}</p>
            <div class="padding-left-30">
                <p class="margin-bottom-0">1. {{ 'book.diseases.part-11-text-3-1'|trans }}</p>
                <div class="padding-left-20">
                    <p class="margin-bottom-0">* {{ 'book.diseases.part-11-text-3-1-1'|trans }}</p>
                    <p class="margin-bottom-0">* {{ 'book.diseases.part-11-text-3-1-2'|trans }}</p>
                    <p class="margin-bottom-0">* {{ 'book.diseases.part-11-text-3-1-3'|trans }}</p>
                    <p>* {{ 'book.diseases.part-11-text-3-1-4'|trans }}</p>
                </div>
                <p class="margin-bottom-0">2. {{ 'book.diseases.part-11-text-3-2'|trans }}</p>
                <div class="padding-left-20">
                    <p class="margin-bottom-0">* {{ 'book.diseases.part-11-text-3-2-1'|trans }}</p>
                    <p class="margin-bottom-0">* {{ 'book.diseases.part-11-text-3-2-2'|trans }}</p>
                    <p class="margin-bottom-0">* {{ 'book.diseases.part-11-text-3-2-3'|trans }}</p>
                    <p>* {{ 'book.diseases.part-11-text-3-2-4'|trans }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="obstructive-diseases" class="row">
    <div class="col-md-12">
        <h6>II. {{ 'book.diseases.header-12'|trans }}</h6>
        <div class="padding-left-20">
            <h7 class="padding-top-15"><b>{{ 'book.diseases.part-11-header-1'|trans }}</b></h7>
            <p>{{ 'book.diseases.part-12-text-1'|trans }}</p>
            <h7><b>{{ 'book.diseases.part-11-header-2'|trans }}</b></h7>
            {% include 'AppBundle:Book:FirstChapter/Includes/table-obstructive-diseases.html.twig' %}
            <h7><b>{{ 'book.diseases.part-11-header-3'|trans }}</b></h7>
            <div class="padding-left-30">
                <p class="margin-bottom-0">* {{ 'book.diseases.part-12-text-3-1'|trans }}</p>
                <p class="margin-bottom-0">* {{ 'book.diseases.part-12-text-3-2'|trans }}</p>
                <div class="margin-left-10">
                    <p class="margin-bottom-0"><i>{{ 'book.note'|trans }}</i></p>
                    <p class="margin-bottom-20"><i>{{ 'book.diseases.note-2'|trans }}</i></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="combined-diseases" class="row">
    <div class="col-md-12">
        <h6>III. {{ 'book.diseases.header-13'|trans }}</h6>
        <div class="padding-left-20">
            <p class="margin-bottom-0">{{ 'book.diseases.part-13-text-1'|trans }}</p>
            <p>{{ 'book.diseases.part-13-text-2'|trans }}</p>
        </div>
    </div>
</div>


<div class="row margin-top-15">
    <div class="col-md-12">
        <h6 class="red-font">
            <i>
                <span>{{ 'book.note'|trans }}: </span>
                {{ 'book.diseases.header-14'|trans }}
            </i>
        </h6>
    </div>
</div>
