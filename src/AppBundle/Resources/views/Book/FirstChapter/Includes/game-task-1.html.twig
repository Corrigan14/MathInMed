            </div>
            <div class="row padding-top-20">
                <div class="col-md-12">
                    {% image '@AppBundle/Resources/public/images/book/game/part1/task1-4.png' %}
                        <img src="{{ asset_url }}" alt="Spirometry curve" class="img-responsive max-width-100-percent" >
                    {% endimage %}
                </div>
            </div>
        </div>

        {# ANSWERS TABLE #}
        <div id="answerTable1" class="row padding-top-50">
            <div class="col-md-12">
                <h6 class="problem">{{ 'book.answer.table'|trans }}</h6>
                <table class="table table-bordered margin-bottom-15 margin-top-15 vertical-middle table-responsive">
                    <thead>
                        <tr class="active uppercase-transform">
                            <th>{{ 'book.answer'|trans }}</th>
                            <th class="text-center">F1, M2, S3, H4</th>
                            <th class="text-center">F1, M4, S3, H2</th>
                            <th class="text-center">F4, M3, S2, H1</th>
                            <th class="text-center">F1, M2, S4, H3</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="active uppercase-transform">
                                <b>{{ 'book.game.cipher'|trans }}</b>
                            </td>
                            <td class="text-center">INEWTON</td>
                            <td class="text-center">GFBRIEMAN</td>
                            <td class="text-center">LEULER</td>
                            <td class="text-center">GWLEIBNIZ</td>
                        </tr>
                    </tbody>
                </table>
