        <div class="heading-block text-center animate fadeInUp margin-top-40" data-wow-delay="0.4s">
            {#FAMOUS MATHEMATICIANS#}
            <a href="{{ path('app_book_first_chapter_history_mathematicians') }}" class="btn btn-med gary">
                {{ 'book.history'|trans }}
            </a>
        </div>
