                </div>
                <div class="col-md-6">
                    {% image '@AppBundle/Resources/public/images/book/game/part1/task1-4.png' %}
                        <img src="{{ asset_url }}" alt="Spirometry curve" class="img-responsive max-width-100-percent" >
                    {% endimage %}
                </div>
            </div>
        </div>

        {# GRAPHS - MOBILE, TABLET #}
        <div class="hidden-lg hidden-md text-center">
            <div class="row padding-top-20">
                <div class="col-md-12">
