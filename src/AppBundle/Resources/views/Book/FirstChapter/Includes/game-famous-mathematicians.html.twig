<section class="testimonial style-3 bg-parallax padding-bottom-80 padding-top-40">
    <div class="container">
        {# FAMOUS MATHEMATICIANS #}
        <div class="heading-block text-center">
            <h3>{{ 'book.game.part1.history.header'|trans }}</h3>
            <div class="divider divider-short divider-center">
                {% image '@AppBundle/Resources/public/images/general/dividers/devider-6-1.png' %}
                <img src="{{ asset_url }}" alt="Divider-Icon-Image" class="i-div">
                {% endimage %}
            </div>
        </div>

        <ul class="row">
            {# NEWTON #}
            <li class="col-md-6 margin-bottom-50">
                <div class="testi-in">
                    <div class="avatar">
                        {% image '@AppBundle/Resources/public/images/book/game/newton2.jpg' %}
                        <img src="{{ asset_url }}" alt="Newton" class="img-circle img-responsive">
                        {% endimage %}
                    </div>
                    <p>{{ 'book.game.part1.history.newton2'|trans }}</p>
                    <p>”{{ 'book.game.part1.history.newton'|trans }}”</p>
                    <h6 class="uppercase-transform">Isaac Newton</h6>
                    <span>1642 - 1727</span></div>
            </li>

            {# RIEMANN #}
            <li class="col-md-6 margin-bottom-50">
                <div class="testi-in">
                    <div class="avatar">
                        {% image '@AppBundle/Resources/public/images/book/game/riemann2.jpeg' %}
                        <img src="{{ asset_url }}" alt="Riemann" class="img-circle img-responsive">
                        {% endimage %}
                    </div>
                    <p>{{ 'book.game.part1.history.riemann2'|trans }}</p>
                    <p>”{{ 'book.game.part1.history.riemann'|trans }}”</p>
                    <h6 class="uppercase-transform">Georg F. Bernhard Riemann</h6>
                    <span>1826 - 1866</span></div>
            </li>

            {# EULER #}
            <li class="col-md-6 margin-bottom-50">
                <div class="testi-in">
                    <div class="avatar">
                        {% image '@AppBundle/Resources/public/images/book/game/euler2.jpg' %}
                        <img src="{{ asset_url }}" alt="Euler" class="img-circle img-responsive">
                        {% endimage %}
                    </div>
                    <p>{{ 'book.game.part1.history.euler2'|trans }}</p>
                    <p>”{{ 'book.game.part1.history.euler'|trans }}”</p>
                    <h6 class="uppercase-transform">Leonhard Euler</h6>
                    <span>1707 - 1783</span></div>
            </li>

            {# LEIBNIZ #}
            <li class="col-md-6 margin-bottom-50">
                <div class="testi-in">
                    <div class="avatar">
                        {% image '@AppBundle/Resources/public/images/book/game/leibniz2.jpg' %}
                        <img src="{{ asset_url }}" alt="Newton" class="img-circle img-responsive">
                        {% endimage %}
                    </div>
                    <p>{{ 'book.game.part1.history.leibniz2'|trans }}</p>
                    <p>”{{ 'book.game.part1.history.leibniz'|trans }}”</p>
                    <h6 class="uppercase-transform">Gottfried Wilhelm Leibniz</h6>
                    <span>1646 - 1716</span></div>
            </li>
        </ul>
    </div>
</section>
