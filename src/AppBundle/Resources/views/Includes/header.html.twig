        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="{{ path('app_homepage') }}">
                    <h1>
                        {% image '@AppBundle/Resources/public/template/images/logo.png' %}
                        <img src="{{ asset_url }}"alt="logo">
                        {% endimage %}
                    </h1>
                </a>

            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="{{ path('app_homepage') }}">{{ 'main_navbar.about'|trans }}</a></li>
                    <li class="dropdown"><a href="{{ path('app_book_main_introudction') }}">{{ 'main_navbar.book'|trans }} <i class="fa fa-angle-down"></i></a>
